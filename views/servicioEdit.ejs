    <div class="col-sm-9">
      <div class="well">
        <h4>Servicio</h4>
        <p>Aqui se editara las solicitudes de servicios registrada.</p>
      </div>
    </div>


    <!-- tabla de registro-->
    <div class="col-sm-9">
        <div class="well">
          

            <div  >    
                
                <% if (servicio) { %>
                              
                        <div class="card border-secondary">  
                              <div class="card-header">Editar Registro</div>
                              <div class="card-body">
                                  <form action="/updateServicio" method="POST">


                                       <input id="idservicio" name="idservicio" value="<%= servicio.idservicio %>" hidden>
                                       <br>

                                      <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" value="<%= servicio.nombre  %>" readonly>                        
                                      </div> 

                                      <br>


                                      <div class="mb-3">
                                        <label for="apellido" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="apellido" name="apellido" tabindex="1" value="<%= servicio.apellido  %>" readonly>                        
                                      </div>

                                      <br>

                                      <div class="mb-3">
                                        <label for="correo" class="form-label">Correo</label>
                                        <input type="text" class="form-control" id="correo" name="correo" tabindex="1" value="<%= servicio.correo  %>" readonly>                        
                                      </div>

                                      <br>


                                      <div class="mb-3">
                                        <label for="telefono" class="form-label">Telefono</label>
                                        <input type="text" class="form-control" id="telefono" name="telefono" tabindex="1" value="<%= servicio.telefono  %>" readonly>                        
                                      </div>

                                      <br>

                                      <div class="mb-3">
                                        <label for="tipoServicio" class="form-label">Tipo de Servicio</label>
                                        <input type="text" class="form-control" id="tipoServicio" name="tipoServicio" tabindex="1" value="<%= servicio.tipoServicio  %>" readonly>                        
                                      </div>

                                      <br>
                                    
                                      
                                      <div class="mb-3">
                                        <label for="fecha" class="form-label">Fecha</label>
                                        <input type="text" class="form-control" id="fecha" name="fecha" tabindex="1" value="<%= servicio.fecha  %>" readonly>                        
                                      </div>
                                      <br>
                                      


                                      <label for="estado_idestado2" class="form-label">ESTADO</label>
                                      <br>

                                      <select id="estado_idestado" name="estado_idestado" class="form-control" tabindex="2">
                                        <option <%= servicio.estado_idestado=='1' ? "selected" : '' %> value="1">RECIBIDO</option>
                                        <option <%= servicio.estado_idestado=='2' ? "selected" : '' %> value="2">PROCESO</option>
                                        <option <%= servicio.estado_idestado=='3' ? "selected" : '' %> value="3">FINALIZADO</option>
                                        <option <%= servicio.estado_idestado=='4' ? "selected" : '' %> value="4">CANCELADO</option>                             
                                      </select>



                                      
                                           <br>
                                           <br>
                                           
                                      <center>
                                      <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                                      <a href="/servicio.ejs" class="btn btn-secondary">Cancelar</a>
                                    </center>


                                  </form>      
                              </div>
                          </div>     
                    
                    <% } %>
              
              
                    
