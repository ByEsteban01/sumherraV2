      <div class="well">
        <h4>Producto</h4>
        <p>Aqui se editara un producto anteriormente registrado.</p>
      </div>
    </div>


    <!-- tabla de registro-->
    <div class="col-sm-9">
        <div class="well">
          

            <div  >    
                
                <% if (producto) { %>
                              
                        <div class="card border-secondary">  
                              <div class="card-header">Editar Registro</div>
                              <br> 
                              <br> 
                              
                              <div class="card-body">
                                  <form action="/updateProducto" method="POST">


                                       <input id="idProducto" name="idProducto" value="<%= producto.idProducto %>" hidden>

                                      <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" value="<%= producto.nombre %>">                        
                                      </div> 
                                      <br> 

                                      <div class="mb-3">
                                        <label for="descripcion" class="form-label">Descripcion</label>
                                        <input type="text" class="form-control" id="descripcion" name="descripcion" tabindex="1" value="<%= producto.descripcion%>">                        
                                      </div>
                                      <br> 


                                      
                                      <br>
                                      <center>
                                      <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                                      <a href="/producto.ejs" class="btn btn-secondary">Cancelar</a>
                                    </center>


                                  </form>      
                              </div>
                          </div>     
                    
                    <% } %>
              
              
                    
