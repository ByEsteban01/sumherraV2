<!DOCTYPE html>
<html>
<head>
    <title>SUMHERRA</title>
    <style>
        body {
            background-image: url('background.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        #logo {
            width: 10%;
        }

        .container {
            background: rgba(255, 255, 255, 0.7);
            padding: 20px;
            border-radius: 20px;
            text-align: center;
            max-width: 60%;
            margin: 10px;
            position: relative;
        }

        .container:hover {
            background: rgba(0, 0, 0, 0.7);
            color: white;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .button {
            font-size: 16px;
            padding: 10px 20px;
            background: transparent;
            border: 2px solid white;
            border-radius: 20px;
            color: white;
            transition: background 0.3s, color 0.3s;
            text-decoration: none;
            margin-top: 20px;
        }

        .button:hover {
            background: white;
            color: black;
        }

        textarea {
            width: 100%;
            height: 150px;
            resize: none;
            padding: 10px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <img id="logo" src="logo.png" alt="Logo">
    <div class="container">
        <h2>Formulario de Solicitud de Servicio</h2>
        <div class="form-container">
            <form action="/servicioMaquinaRealizado" method="POST">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required><br><br>

                <label for="apellido">Apellido:</label>
                <input type="text" id="apellido" name="apellido" required><br><br>
                
                <label for="correo">Correo:</label>
                <input type="email" id="correo" name="correo" required><br><br>
                
                <label for="telefono">Teléfono:</label>
                <input type="tel" id="telefono" name="telefono"><br><br>
                
                <label for="servicio">Servicio:</label>
                <input type="text" id="tipoServicio" name="tipoServicio" value="Fabricación" readonly><br><br>
                
                <button type="submit" class="button">Enviar</button>
            </form>
            <script>
                // JavaScript para obtener la fecha actual en el formato deseado
                const fechaInput = document.getElementById('fecha');
                const fechaActual = new Date();
                const año = fechaActual.getFullYear();
                const mes = String(fechaActual.getMonth() + 1).padStart(2, '0'); // Agrega un 0 si el mes es < 10
                const dia = String(fechaActual.getDate()).padStart(2, '0'); // Agrega un 0 si el día es < 10
                const hora = String(fechaActual.getHours()).padStart(2, '0');
                const minuto = String(fechaActual.getMinutes()).padStart(2, '0');
                const segundo = String(fechaActual.getSeconds()).padStart(2, '0');
                const fechaFormateada = `${año}-${mes}-${dia} ${hora}:${minuto}:${segundo}`;
                fechaInput.value = fechaFormateada;
            </script>
        </div>
    </div>
</body>
</html>